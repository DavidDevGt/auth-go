  ],
  "item": [
    {
      "name": "Flujo Secuencial QA",
      "description": "Todos los pasos en orden correcto para asegurar las variables y el flujo.",
      "item": [
        {
          "name": "Registro exitoso",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": { "raw": "{{base_url}}/api/register", "host": ["{{base_url}}"], "path": ["api", "register"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"{{username}}\",\n  \"email\": \"{{username}}@mail.com\",\n  \"password\": \"{{password}}\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Registro exitoso o usuario ya existe\", function () {",
                  "  pm.expect(pm.response.code).to.be.oneOf([201, 400, 409]);",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Login para access y refresh",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": { "raw": "{{base_url}}/api/login", "host": ["{{base_url}}"], "path": ["api", "login"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{username}}@mail.com\",\n  \"password\": \"{{password}}\",\n  \"device_id\": \"device-qa-1\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Login exitoso\", function () {",
                  "  pm.expect(pm.response.code).to.eql(200);",
                  "  var json = pm.response.json();",
                  "  pm.expect(json).to.have.property('access_token');",
                  "  pm.expect(json).to.have.property('refresh_token');",
                  "  pm.environment.set('access_token', json.access_token);",
                  "  pm.environment.set('refresh_token', json.refresh_token);",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Login para logout",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
